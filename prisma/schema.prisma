model User {
  id Int    @id     @default(autoincrement())
  email     String  @unique
  password  String
}

model Milestone {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  deadline    DateTime
  issues      Issue[]
}

model Issue {
  id          Int       @id @default(autoincrement())
  title       String
  description String
  progress    Int       @default(0) // 0-100
  milestoneId Int
  milestone   Milestone @relation(field: [milestoneId], references: [id])
}

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
